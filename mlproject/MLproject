name: ap1

entry_points:
  main:
    parameters:
      datadirsize:
        type: string
        default: /p/scratch/deepacf/maelstrom/maelstrom_data/ap1/air_temperature/5TB
      mode:
        type: string
        default: train
      batch_size:
        type: int
        default: 36
      patch_size:
        type: int
        default: 32
      num_parallel_calls:
        type: int
        default: 12
      nepochs:
        type: int
        default: 3
    command: >
      python3 -u benchmark.py 
        {datadirsize}/20200301T*.nc 
        -m {mode} 
        -b {batch_size} 
        -p {patch_size} 
        -j {num_parallel_calls} 
        -e {nepochs} 
        -val {datadirsize}/20200615T*.nc 
        --norm {datadir}/normalization.yml
